<div class="min-h-screen flex items-center justify-center bg-gray-50">
  <div class="w-full max-w-md bg-white p-8 rounded-xl shadow-lg">
    <h1 class="text-2xl font-bold mb-6">Edit Profile</h1>

    <%= form_with model: @user, class: "space-y-4" do |form| %>
      <div>
        <%= form.label :name, "Name", class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :name, autocomplete: "name", placeholder: "Enter your name", class: "pl-1 mt-1 block w-full rounded-md border-gray-200 border-2 focus:ring-indigo-500 focus:border-indigo-500 focus:outline-none" %>
      </div>

      <div>
        <%= form.label :email_address, "Email address", class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :email_address, required: true, autocomplete: "email", placeholder: "Enter your email", class: "pl-1 mt-1 block w-full rounded-md border-gray-200 border-2 focus:ring-indigo-500 focus:border-indigo-500 focus:outline-none" %>
      </div>

      <div>
        <%= form.label :password, "New Password (leave blank if not changing)", class: "block text-sm font-medium text-gray-700" %>
        <%= form.password_field :password, autocomplete: "new-password", placeholder: "Enter new password", maxlength: 72, class: "pl-1 mt-1 block w-full rounded-md border-gray-200 border-2 focus:ring-indigo-500 focus:border-indigo-500 focus:outline-none" %>
      </div>

      <div>
        <%= form.label :password_confirmation, "Confirm new password", class: "block text-sm font-medium text-gray-700" %>
        <%= form.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm new password", maxlength: 72, class: "pl-1 mt-1 block w-full rounded-md border-gray-200 border-2 focus:ring-indigo-500 focus:border-indigo-500 focus:outline-none" %>
      </div>

      <div class="flex justify-center gap-3 text-center">
        <%= link_to "Back to profile", user_path(@user), class: "w-full py-2 px-4 bg-gray-200 text-gray-700 font-semibold rounded-lg hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500" %>
        <%= form.submit "Update profile", class: "w-full py-2 px-4 bg-indigo-600 text-white font-semibold rounded-lg hover:bg-indigo-700" %>
      </div>
    <% end %>
  </div>
</div>