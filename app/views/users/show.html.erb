<div class="min-h-screen flex items-center justify-center bg-gray-50">
  <div class="w-full max-w-md bg-white p-8 rounded-xl shadow-lg">
    <h1 class="text-2xl font-bold mb-6">User Profile</h1>

    <div class="mb-6">
      <h3 class="text-sm font-medium text-gray-700 mb-1">Name</h3>
      <% if @user.name.present? %>
        <p class="text-gray-900"><%= @user.name %></p>
      <% else %>
        <p class="text-gray-400 italic">No name provided</p>
      <% end %>
    </div>

    <div>
      <h3 class="text-sm font-medium text-gray-700 mb-1">Email Address</h3>
      <p class="text-gray-900"><%= @user.email_address %></p>
    </div>

    <div class="mt-6 btn">
      <%= link_to "Edit profile", edit_user_path, class: "w-full py-2 px-4 bg-indigo-600 text-white font-semibold rounded-lg hover:bg-indigo-700" %>
    </div>
  </div>
</div>
