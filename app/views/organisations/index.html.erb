<div class="min-h-screen flex flex-col items-center justify-start bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="w-full max-w-xl bg-white p-8 rounded-xl shadow-lg">
    <h1 class="text-3xl font-bold text-center text-gray-900 mb-8">Organisations</h1>

    <% if @organisations.any? %>
      <p class="text-md text-gray-700 mb-6">You are part of the following organisations:</p>
      <div class="space-y-3 flex flex-wrap justify-center gap-3">
        <% @organisations.each do |organisation| %>
          <div class="w-fit py-2 px-4 my-4 bg-indigo-600 text-white font-semibold rounded-lg hover:bg-indigo-700">
            <%= link_to organisation.name, 
                        organisation_path(organisation) %>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-md text-gray-600 text-center py-4">You are not currently assigned to an organisation.</p>
    <% end %>
  </div>
</div>
