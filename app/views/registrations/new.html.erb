<h1>Sign up for an account</h1>

<%= form_with url: registration_path do |form| %>
    <div style="display: block;">
        <%= form.label "Organisation Id" %>
        <%= form.text_field :organisation_id, required: true, autofocus: true, autocomplete: "organisation_id", placeholder: "Enter your organisation id", value: params[:organisation_id] %>
    </div>
    <div style="display: block;">   
        <%= form.label "Email address" %>
        <%= form.email_field :email_address, required: true, autofocus: true, autocomplete: "username", placeholder: "Enter your email address", value: params[:email_address] %><br>
    </div>
        <%= form.label "Password" %>
        <%= form.password_field :password, required: true, autocomplete: "new-password", placeholder: "Enter your password", maxlength: 72 %><br>
        <%= form.label "Confirm password" %>
        <%= form.password_field :password_confirmation, required: true, autocomplete: "new-password", placeholder: "Confirm your password", maxlength: 72 %><br>
        <%= form.submit "Create account", style: "display: block;" %>
    
<% end %>
